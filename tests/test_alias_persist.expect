#!/usr/bin/env expect
set timeout 5
set dir [exec mktemp -d]
set env(HOME) $dir
spawn ../vush
expect "vush> "
send "alias hi='echo persisted'\r"
expect "vush> "
send "exit\r"
expect eof
spawn ../vush
expect "vush> "
send "hi world\r"
expect {
    -re "\[\r\n\]+persisted world\[\r\n\]+vush> " {}
    timeout { send_user "alias not persisted\n"; exec rm -rf $dir; exit 1 }
}
send "exit\r"
expect eof
exec rm -rf $dir
