#!/usr/bin/env expect
set timeout 5
spawn ../vush
expect "vush> "
# simple command negation
send "! false\r"
expect "vush> "
send "echo \$?\r"
expect {
    -re "\[\r\n\]+0\[\r\n\]+vush> " {}
    timeout { send_user "negate command status mismatch\n"; exit 1 }
}
# pipeline negation
send "! true | false\r"
expect "vush> "
send "echo \$?\r"
expect {
    -re "\[\r\n\]+0\[\r\n\]+vush> " {}
    timeout { send_user "negate pipeline status mismatch\n"; exit 1 }
}
send "exit\r"
expect eof
