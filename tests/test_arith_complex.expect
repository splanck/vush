#!/usr/bin/env expect
set timeout 5
spawn [file dirname [info script]]/../build/vush
expect {
    "vush> " {}
    timeout { send_user "prompt timeout\n"; exit 1 }
}
send {echo $((1+2))\r}
expect {
    -re "\[\r\n\]+3\[\r\n\]+vush> " {}
    timeout { send_user "simple arithmetic failed\n"; exit 1 }
}
send {echo $(((1+2)*3))\r}
expect {
    -re "\[\r\n\]+9\[\r\n\]+vush> " {}
    timeout { send_user "complex arithmetic failed\n"; exit 1 }
}
send {echo $(((1 && 2) || 0))\r}
expect {
    -re "\[\r\n\]+1\[\r\n\]+vush> " {}
    timeout { send_user "logical expression failed\n"; exit 1 }
}
send "exit\r"
expect {
    eof {}
    timeout { send_user "eof timeout\n"; exit 1 }
}
