#!/usr/bin/env expect
set timeout 5
spawn [file dirname [info script]]/../build/vush
expect {
    "vush> " {}
    timeout { send_user "prompt timeout\n"; exit 1 }
}
send "sleep 5 &\r"
expect {
    "vush> " {}
    timeout { send_user "prompt timeout\n"; exit 1 }
}
send "jobs -l\r"
expect {
    -re {\[1\] [0-9]+ Running sleep 5 &([\r\n]+\[vush\] job [0-9]+ \(sleep 5 \&\) finished)?[\r\n\s]+vush> } {}
    timeout { send_user "jobs -l output mismatch\n"; exit 1 }
}
send "kill 1\r"
expect {
    -re {.*\[vush\] job [0-9]+ \(sleep 5 \&\) finished[\r\n\s]+vush> } {}
    timeout { send_user "kill output mismatch\n"; exit 1 }
}
send "exit\r"
expect {
    eof {}
    timeout { send_user "eof timeout\n"; exit 1 }
}
