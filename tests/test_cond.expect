#!/usr/bin/env expect
set timeout 5
spawn ../vush
expect "vush> "

send "x=foo\r"
expect "vush> "

send "[[ $x == foo ]]; echo \$?\r"
expect {
    -re "[\r\n]+0[\r\n]+vush> " {}
    timeout { send_user "equality failed\n"; exit 1 }
}

send "[[ $x == f* ]]; echo \$?\r"
expect {
    -re "[\r\n]+0[\r\n]+vush> " {}
    timeout { send_user "pattern match failed\n"; exit 1 }
}

send "[[ $x == b* ]]; echo \$?\r"
expect {
    -re "[\r\n]+1[\r\n]+vush> " {}
    timeout { send_user "pattern negative failed\n"; exit 1 }
}

send "exit\r"
expect eof
