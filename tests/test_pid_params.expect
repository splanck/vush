#!/usr/bin/expect -f
set timeout 5
spawn ../vush
expect "vush> "
# Test $$ expansion
set pid [exp_pid]
send "echo $$\r"
expect {
    -re "[\r\n]+$pid[\r\n]+vush> " {}
    timeout { send_user "\$\$ expansion failed\n"; exit 1 }
}
# Test $! expansion
send "sleep 1 &\r"
expect "vush> "
send "echo $!\r"
expect {
    -re "[\r\n]+([0-9]+)[\r\n]+vush> " { set bg $expect_out(1,string) }
    timeout { send_user "\$! expansion failed\n"; exit 1 }
}
send "jobs\r"
expect {
    -re "\[1\] $bg sleep 1 &[\r\n]+vush> " {}
    timeout { send_user "jobs pid mismatch\n"; exit 1 }
}
send "exit\r"
expect eof
