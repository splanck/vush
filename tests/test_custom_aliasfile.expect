#!/usr/bin/env expect
set timeout 5
set dir [exec mktemp -d]
set env(HOME) $dir
set env(VUSH_ALIASFILE) "$dir/aliases"
spawn ../vush
expect "vush> "
send "alias hi='echo custom'\r"
expect "vush> "
send "exit\r"
expect eof
spawn ../vush
set env(HOME) $dir
set env(VUSH_ALIASFILE) "$dir/aliases"
expect "vush> "
send "hi world\r"
expect {
    -re "\[\r\n\]+custom world\[\r\n\]+vush> " {}
    timeout { send_user "alias not loaded\n"; exec rm -rf $dir; exit 1 }
}
send "exit\r"
expect eof
exec rm -rf $dir
