#!/usr/bin/env expect
set timeout 5
# disable history writes so RLIMIT_FSIZE tests do not kill the shell
set env(VUSH_HISTFILE) "/dev/null"
spawn [file dirname [info script]]/../build/vush
expect {
    "vush> " {}
    timeout { send_user "prompt timeout\n"; exit 1 }
}
send "ulimit -a\r"
expect {
    -re "\r\n-c (?:unlimited|\[0-9\]+)\r?\n-d (?:unlimited|\[0-9\]+)\r?\n-f (?:unlimited|\[0-9\]+)\r?\n-n (?:unlimited|\[0-9\]+)\r?\n-s (?:unlimited|\[0-9\]+)\r?\n-t (?:unlimited|\[0-9\]+)\r?\n-v (?:unlimited|\[0-9\]+)\r?\nvush> " {}
    timeout { send_user "ulimit -a output mismatch\n"; exit 1 }
}
send "ulimit -f 1234\r"
expect {
    "vush> " {}
    timeout { send_user "prompt timeout\n"; exit 1 }
}
send "ulimit -f\r"
expect {
    -re "\r\n1234\r?\nvush> " {}
    timeout { send_user "ulimit set failed\n"; exit 1 }
}
send "ulimit -H -f 1234\r"
expect {
    "vush> " {}
    timeout { send_user "prompt timeout\n"; exit 1 }
}
send "ulimit -H -f\r"
expect {
    -re "\r\n1234\r?\nvush> " {}
    timeout { send_user "ulimit hard set failed\n"; exit 1 }
}
send "ulimit -S -f 123\r"
expect {
    "vush> " {}
    timeout { send_user "prompt timeout\n"; exit 1 }
}
send "ulimit -S -f\r"
expect {
    -re "\r\n123\r?\nvush> " {}
    timeout { send_user "ulimit soft set failed\n"; exit 1 }
}
send "ulimit -H -f\r"
expect {
    -re "\r\n1234\r?\nvush> " {}
    timeout { send_user "ulimit hard query failed\n"; exit 1 }
}
send "exit\r"
expect {
    eof {}
    timeout { send_user "eof timeout\n"; exit 1 }
}
